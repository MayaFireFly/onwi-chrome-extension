{    
  "name": "Open New Window in Incognito mode (ONWI)",    
  "version": "1.0",    
  "description": "Google chrome extension for open new window in incognito mode.",
  "permissions": ["tabs","activeTab","declarativeContent","storage","*://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },    
  "manifest_version": 2,
  "page_action": {        
    "default_popup": "popup.html",        
    "default_icon": {            
      "16": "images/favicon-16x16.png",            
      "32": "images/favicon-32x32.png",
      "48": "images/favicon-32x32.png",
      "128": "images/favicon-128x128.png"       
    }    
  },    
  "icons": {        
    "16": "images/favicon-16x16.png",        
    "32": "images/favicon-32x32.png",
    "48": "images/favicon-32x32.png",
    "128": "images/favicon-128x128.png"    
  },
  "content_scripts": [
    {
      "matches": ["https://*.host1/*", "https://*.host2/*", "https://*.host3/*"],
      "all_frames": true,
      "run_at": "document_idle",
      "js": ["content.js"]
    }
  ]
}